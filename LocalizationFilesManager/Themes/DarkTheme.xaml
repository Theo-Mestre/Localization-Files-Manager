    <SolidColorBrush x:Key="TextBrush" Color="White"/>

    <SolidColorBrush x:Key="TopBarBackgroundBrush" Color="#202020"/>
    <SolidColorBrush x:Key="TopBarBackgroundHovered" Color="#404040"/>
    <SolidColorBrush x:Key="TopBarForegroundBrush" Color="#757575"/>

