    <SolidColorBrush x:Key="BackgroundBrush" Color="#292929"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="White"/>

    <SolidColorBrush x:Key="ButtonBrush" Color="#BF73AB"/>
    <SolidColorBrush x:Key="ButtonHoveredBrush" Color="#8C5A84"/>
